*/

void
So@Gui@RenderArea::setDevicesWindowSize(
  const SbVec2s size )
{
  if ( ! this->deviceList ) return;
  const int num = this->deviceList->getLength();
  for ( int i = 0; i < num; i++ )
    ((So@Gui@Device *)(*this->deviceList)[i])->setWindowSize( size );
} // setDevicesWindowSize()

