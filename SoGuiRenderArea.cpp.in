void
So@GUI@RenderArea::glRender( // virtual, derived
  void )
{
  // Do not do immediate redraw on expose events, as there might be a
  // series of them coming along and it would be wasteful and stupid
  // to re-render on all of them.
  this->scheduleRedraw();
} // glRender()

