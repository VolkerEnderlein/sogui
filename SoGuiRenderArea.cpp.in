So@GUI@RenderArea::So@GUI@RenderArea(
  @WIDGET@ parent,
  const char * name,
  SbBool inParent,
  SbBool mouseInput,
  SbBool keyboardInput )
: inherited( parent, name, inParent, SO_GL_DEFAULT_MODE, FALSE )
{
  this->constructor( mouseInput, keyboardInput );
  this->buildWidget( inParent != FALSE ? parent : NULL );
} // So@GUI@RenderArea()

/*!
