void
So@Gui@RenderArea::processEvent( // virtual, protected
  @EVENT@ event )
{
  if ( this->invokeAppCB( event ) )
    return;

  const SoEvent * soevent = this->getSoEvent( event );

  if ( soevent != NULL ) {
    SbBool processed = this->processSoEvent(soevent);
    if ( processed ) return;
  }

  inherited::processEvent( event );
} // processEvent()

