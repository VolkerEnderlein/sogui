// documented in superclass
void
So@Gui@PlaneViewer::setSeekMode(SbBool on)
{
  // Note: this method is almost identical to the setSeekMode() in the
  // So@Gui@FlyViewer and So@Gui@ExaminerViewer, so migrate any
  // changes.

#if SO@GUI@_DEBUG
  if (on == this->isSeekMode()) {
    SoDebugError::postWarning("So@Gui@PlaneViewer::setSeekMode",
                              "seek mode already %sset", on ? "" : "un");
    return;
  }
#endif // SO@GUI@_DEBUG

  inherited::setSeekMode(on);
  this->mode = on ?
    So@Gui@PlaneViewer::SEEK_WAIT_MODE :
    So@Gui@PlaneViewer::IDLE_MODE;

  this->setCursorRepresentation(this->mode);
}

// ************************************************************************

/*!
  Decide whether or not the mouse pointer cursor should be visible in the
  rendering canvas.
*/
void
So@Gui@PlaneViewer::setCursorEnabled(SbBool enable)
{
  inherited::setCursorEnabled(enable);
  this->setCursorRepresentation(this->mode);
}

// ************************************************************************

// Set cursor graphics according to mode.
void
So@Gui@PlaneViewer::setCursorRepresentation(PlaneViewerMode mode)
{
#if SO@GUI@_DEBUG && 0 // debug
  SoDebugError::postInfo("So@Gui@PlaneViewer::setCursorRepresentation",
                         "mode==%d", mode);
#endif // debug

  assert(this->getGLWidget());

  if (!this->isCursorEnabled()) {
    this->setComponentCursor(So@Gui@Cursor::getBlankCursor());
    return;
  }

  switch (mode) {
  case So@Gui@PlaneViewer::IDLE_MODE:
  case So@Gui@PlaneViewer::ROTZ_WAIT_MODE:
    this->setComponentCursor(So@Gui@Cursor(So@Gui@Cursor::DEFAULT));
    break ;
  case So@Gui@PlaneViewer::DOLLY_MODE:
    this->setComponentCursor(So@Gui@Cursor(So@Gui@Cursor::UPARROW));
    break;
  case So@Gui@PlaneViewer::ROTZ_MODE:
    this->setComponentCursor(So@Gui@Cursor::getRotateCursor());
    break;
  case So@Gui@PlaneViewer::SEEK_WAIT_MODE:
  case So@Gui@PlaneViewer::SEEK_MODE:
    this->setComponentCursor(So@Gui@Cursor(So@Gui@Cursor::CROSSHAIR));
    break;
  case So@Gui@PlaneViewer::TRANSLATE_MODE:
    this->setComponentCursor(So@Gui@Cursor::getPanCursor());
    break;
  default:
    assert(0 && "unknown PlaneViewer mode");
    break;
  }
}

