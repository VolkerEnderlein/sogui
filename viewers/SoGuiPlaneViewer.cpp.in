#define MOUSE_BUTTON_EVENT_TYPE (SoMouseButtonEvent::getClassTypeId())
#define LOCATION2_EVENT_TYPE    (SoLocation2Event::getClassTypeId())
#define KEYBOARD_EVENT_TYPE     (SoKeyboardEvent::getClassTypeId())

// Documented in superclass.
SbBool
So@Gui@PlaneViewer::processSoEvent(const SoEvent * const ev)
{
  if (!this->isViewing()) {
    // We're in "interact" mode (ie *not* the camera modification
    // mode), so don't handle the event here. It should either be
    // forwarded to the scenegraph, or caught by
    // So@Gui@Viewer::processSoEvent() if it's an ESC press (to switch
    // modes).
    return inherited::processSoEvent(ev);
  }

  SbBool processed = FALSE;
  PlaneViewerMode previousmode = this->mode;

  const SoType type(ev->getTypeId());

  const SbVec2s size(this->getGLSize());
  const SbVec2s pos(ev->getPosition());
  const SbVec2f posn((float)pos[0] / (float) So@Gui@Max(size[0], (short int)1),
                     (float)pos[1] / (float) So@Gui@Max(size[1], (short int)1));

  if (type.isDerivedFrom(MOUSE_BUTTON_EVENT_TYPE)) {
    processed = TRUE;
    const SoMouseButtonEvent * event = (const SoMouseButtonEvent *) ev;
    const SbBool press = (event->getState() == SoButtonEvent::DOWN) ? TRUE : FALSE;

    if (press) {
      // Called twice to initialize both "now" (current) and "then"
      // (previous) pointer location.
      this->setPointerLocation(pos);
      this->setPointerLocation(pos);
    }

    switch (event->getButton()) {
      case SoMouseButtonEvent::BUTTON1:
        this->button1down = press;

        if (press && (previousmode == SEEK_WAIT_MODE)) {
          this->mode = SEEK_MODE;
          this->seekToPoint(pos); // implicitly calls interactiveCountInc()
        }
        break;

      case SoMouseButtonEvent::BUTTON2:
        this->button2down = press;
        break;

      case SoMouseButtonEvent::BUTTON3:
        this->button3down = press;
        break;

#ifdef HAVE_SOMOUSEBUTTONEVENT_BUTTON5
      case SoMouseButtonEvent::BUTTON4:
        if (press) this->zoom(0.1f);
        break;

      case SoMouseButtonEvent::BUTTON5:
        if (press) this->zoom(-0.1f);
        break;
#endif // HAVE_SOMOUSEBUTTONEVENT_BUTTON5

      default:
        break;
    } // switch (event->getButton())
  }

  if (type.isDerivedFrom(KEYBOARD_EVENT_TYPE)) {
    const SoKeyboardEvent * event = (const SoKeyboardEvent *) ev;
    const SbBool press = (event->getState() == SoButtonEvent::DOWN) ? TRUE : FALSE;

    switch (event->getKey()) {
    case SoKeyboardEvent::LEFT_CONTROL:
      processed = TRUE;
      this->leftcontroldown = press;
      break;
    case SoKeyboardEvent::RIGHT_CONTROL:
      processed = TRUE;
      this->rightcontroldown = press;
      break;
    case SoKeyboardEvent::LEFT_SHIFT:
      processed = TRUE;
      this->leftshiftdown = press;
      break;
    case SoKeyboardEvent::RIGHT_SHIFT:
      processed = TRUE;
      this->rightshiftdown = press;
      break;

    default:
      break;
    }

  } // KEYBOARD_EVENT_TYPE


  if (type.isDerivedFrom(LOCATION2_EVENT_TYPE)) {
    processed = TRUE;
    const SoLocation2Event * event = (const SoLocation2Event *) ev;
    this->setPointerLocation(pos);
    const SbVec2f prevn((float) this->pointer.then[0] / (float) So@Gui@Max(size[0], (short int)1),
                        (float) this->pointer.then[1] / (float) So@Gui@Max(size[1], (short int)1));

    do {
      if (this->mode == ROTZ_MODE) {
        this->rotateZ(this->getPointerOrigoMotionAngle());
        break;
      }

      if (this->mode == TRANSLATE_MODE) {
        if ((posn[0] != prevn[0]) || (posn[1] != prevn[1])) {
          float dx = (posn[0] - prevn[0]) * 2.5f;
          float dy = (posn[1] - prevn[1]) * 2.5f;
          float yvalue = this->getLeftWheelValue() - dy;
          float xvalue = this->getBottomWheelValue() + dx;
          this->leftWheelMotion(yvalue);
          this->setLeftWheelValue(yvalue);
          this->bottomWheelMotion(xvalue);
          this->setBottomWheelValue(xvalue);
        }
        break;
      }

      if (this->mode == DOLLY_MODE) {
        if (posn[1] != prevn[1]) {
          float value = this->getRightWheelValue() + (prevn[1] - posn[1]) * 10.0f;
          this->rightWheelMotion(value);
          this->setRightWheelValue(value);
        }
        break;
      }

    } while (FALSE);
  } // LOCATION2_EVENT_TYPE

  SbBool ctrldown = this->leftcontroldown || this->rightcontroldown;
  SbBool shiftdown = this->leftshiftdown || this->rightshiftdown;
  enum {
    BUTTON1DOWN = 1 << 0,
    BUTTON2DOWN = 1 << 1,
    BUTTON3DOWN = 1 << 2,
    CTRLDOWN =    1 << 3,
    SHIFTDOWN =   1 << 4
  };
  unsigned int combo =
    (this->button1down ? BUTTON1DOWN : 0) |
    (this->button2down ? BUTTON2DOWN : 0) |
    (this->button3down ? BUTTON3DOWN : 0) |
    (ctrldown ? CTRLDOWN : 0) |
    (shiftdown ? SHIFTDOWN : 0);

#if SO@GUI@_DEBUG && 0 // debug
  SoDebugError::postInfo("So@Gui@PlaneViewer::processSoEvent",
                         "button1==%d, button2==%d, button3==%d, "
                         "lctrl==%d, rctrl==%d, lshift==%d, rshift==%d",
                         this->button1down, this->button2down, this->button3down,
                         this->leftcontroldown, this->rightcontroldown,
                         this->leftshiftdown, this->rightshiftdown);
#endif // debug
  

  switch (combo) {
  case BUTTON1DOWN:
  case BUTTON1DOWN|BUTTON3DOWN:
    this->mode = DOLLY_MODE;
    break;
  case BUTTON3DOWN:
  case CTRLDOWN|BUTTON1DOWN:
  case SHIFTDOWN|BUTTON1DOWN:
    this->mode = TRANSLATE_MODE;
    break;
  case CTRLDOWN|BUTTON3DOWN:
  case CTRLDOWN|SHIFTDOWN|BUTTON1DOWN:
    this->mode = ROTZ_MODE;
    break;
  case CTRLDOWN:
  case CTRLDOWN|SHIFTDOWN:
    this->mode = ROTZ_WAIT_MODE;
    break;
  default:
    this->mode = IDLE_MODE;
    break;
  }

  if (previousmode != this->mode) {
    switch (this->mode) {
    case TRANSLATE_MODE:
    case DOLLY_MODE:
      this->interactiveCountInc();
      break;

    case ROTZ_MODE:
      this->interactiveCountInc();
      this->setCanvasSize(size);
      this->setPointerLocation(pos);
      this->setPointerLocation(pos);
      this->scheduleRedraw();
      break;

    default:
      break;
    }

    switch (previousmode) {
    case TRANSLATE_MODE:
    case ROTZ_MODE:
    case DOLLY_MODE:
      this->interactiveCountDec();
      break;
    default:
      break;
    }

    this->setCursorRepresentation(this->mode);
  }

  // If not handled in this class, pass on upwards in the inheritance
  // hierarchy.
  return processed || inherited::processSoEvent(ev);
}

