// @configure_input@

#ifndef SOGUIINTLIST_H
#define SOGUIINTLIST_H

// We were using the SbIntList class in the SoGuiViewer code, but as
// we f*cked up and forgot to expose SbIntList (and most other list
// classes) with COIN_DLL_API in Coin-1, we can't use it without
// getting linker problems under MSWin (we have reports on MSVC++ 7
// failing and MSVC++ 6 working ok).
//
// Our solution to this problem is simply to duplicate the SbIntList
// functionality in this internal class.
//
// mortene.

// ************************************************************************

// This file contains definitions which should _only_ be used during
// library build. It is not installed for use by the application
// programmer.
#ifndef SO@GUI@_INTERNAL
#error Only for internal use during library build.
#endif /* !SO@GUI@_INTERNAL */

// ************************************************************************

#include <Inventor/SbPList.h>

// ************************************************************************

class SoGuiIntList : public SbPList {
public:
  SoGuiIntList(void) : SbPList() { }
  int get(const int index) const { return int((*this)[index]); }
  void set(const int index, const int item) { (*this)[index] = (void *)item; }

  void append(const int item) { SbPList::append((void *)item); }
};

// ************************************************************************

#endif // ! SOGUIINTLIST_H
