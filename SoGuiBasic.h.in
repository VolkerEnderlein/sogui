template <class Type>
inline Type So@Gui@Max( Type a, Type b ) { return (b > a) ? b : a; }

template <class Type>
inline Type So@Gui@Min( Type a, Type b ) { return (b < a) ? b : a; }

template <class Type>
inline void So@Gui@Swap( Type & a, Type & b ) { Type t = a; a = b; b = t; }

