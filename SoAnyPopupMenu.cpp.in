  this->menu->RemoveMenuItem( itemid );
} // RemoveMenuItem()

// *************************************************************************

int
SoAnyPopupMenu::PopUp(
  int screenx,
  int screeny )
{
  return this->menu->PopUp( screenx, screeny );
} // PopUp()

