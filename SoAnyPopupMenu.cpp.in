{
  return this->menu->GetMenuItemMarked( itemid );
} // GetMenuItemMarked()

// *************************************************************************

void
SoAnyPopupMenu::AddMenu(
  int menuid,
  int submenuid,
  int pos )
{
  this->menu->AddMenu( menuid, submenuid, pos );
} // AddMenu()

void
SoAnyPopupMenu::AddMenuItem(
