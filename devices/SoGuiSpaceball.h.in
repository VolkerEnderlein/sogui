  @COMPONENTHEADER@

public:
  enum Events {
    MOTION      = 0x01,
    PRESS       = 0x02,
    RELEASE     = 0x04,
    ALL_EVENTS  = 0x07
  };

  So@Gui@Spaceball(int events = ALL_EVENTS);
  virtual ~So@Gui@Spaceball(void);

