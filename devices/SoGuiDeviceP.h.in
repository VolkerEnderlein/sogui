#ifndef SOGUI_DEVICEP_H
#define SOGUI_DEVICEP_H

// *************************************************************************

#include <Inventor/@Gui@/devices/So@Gui@Device.h>

// *************************************************************************

class SoGuiDeviceP {

public:
  SoGuiDeviceP(So@Gui@Device * p);
  virtual ~SoGuiDeviceP();

  void addEventHandler(@WIDGET@ widget,
                       So@Gui@EventHandler * handler,
                       void * closure);
  void removeEventHandler(@WIDGET@ widget,
                          So@Gui@EventHandler * handler,
                          void * closure);

  typedef SbBool HandlerCB(So@Gui@EventHandler * handler,
                           @WIDGET@ widget,
                           @EVENT@ event,
                           void * handlerclosure);

  void invokeHandlers(HandlerCB * cb, @EVENT@ event);

  SbPList * handlers;
  static SbVec2s lasteventposition;
  SbVec2s widgetsize;

private:
  class So@Gui@Device * pub;
};

#define PRIVATE(p) (p->pimpl)
#define PUBLIC(p) (p->pub)

// *************************************************************************

#endif // !SOGUI_DEVICEP_H
