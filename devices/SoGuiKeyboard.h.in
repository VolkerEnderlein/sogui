#ifndef SO@GUI@_KEYBOARD_H
#define SO@GUI@_KEYBOARD_H

#include <Inventor/@Gui@/devices/So@Gui@Device.h>

class SoKeyboardEvent;

// *************************************************************************

#define SO_@GUI@_ALL_KEYBOARD_EVENTS So@Gui@Keyboard::ALL

class SO@GUI@_DLL_API So@Gui@Keyboard : public So@Gui@Device {
  SO@GUI@_OBJECT_HEADER(So@Gui@Keyboard, So@Gui@Device);

public:
  enum Events {
    // FIXME: check if the define matches with X11 is really
    // necessary. If not, remove the comments below, if so, document
    // properly this dependency. 20011229 mortene.

    KEY_PRESS = 0x01, // matches X11's KeyPressMask define
    KEY_RELEASE = 0x02, // matches X11's KeyReleaseMask define
    ALL_EVENTS = KEY_PRESS | KEY_RELEASE
  };

  So@Gui@Keyboard(int eventmask = ALL_EVENTS);
  virtual ~So@Gui@Keyboard(void);

  virtual void enable(@WIDGET@ widget, So@Gui@EventHandler * handler,
                      void * closure
#ifdef __COIN_SOXT__ // FIXME: get rid of this abominable #ifdef. 20011229 mortene.
                      , Window window = NULL
#endif // __COIN_SOXT__
                      );
  virtual void disable(@WIDGET@ widget, So@Gui@EventHandler * handler,
                       void * closure);

  virtual const SoEvent * translateEvent(@EVENT@ event);

private:
  int eventmask;
  SoKeyboardEvent * kbdevent;
};

// *************************************************************************

#endif // ! SO@GUI@_KEYBOARD_H
