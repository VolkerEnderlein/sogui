void
So@GUI@RenderArea::sizeChanged( // virtual, protected
  const SbVec2s size )
{
  assert( this->normalManager != NULL );
  assert( this->overlayManager != NULL );

  this->normalManager->setWindowSize( size );
  this->normalManager->setSize( size );

  this->overlayManager->setWindowSize( size );
  this->overlayManager->setSize( size );

  if ( this->devices.mouse != NULL )
    this->devices.mouse->setWindowSize( size );
  if ( this->devices.keyboard != NULL )
    this->devices.keyboard->setWindowSize( size );
  if ( this->devices.extra != NULL ) {
    for ( int i = 0; i < this->devices.extra->getLength(); i++ )
      ((So@GUI@Device *)((*(this->devices.extra))[i]))->setWindowSize( size );
  }
}

