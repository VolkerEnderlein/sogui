  viewer headlight.

  The fields of the node is available for user editing.

  \sa isHeadlight(), setHeadlight()
*/

SoDirectionalLight *
So@GUI@Viewer::getHeadlight(void) const
{
  if (!this->lightroot) return NULL;

  SoDirectionalLight * dl =
